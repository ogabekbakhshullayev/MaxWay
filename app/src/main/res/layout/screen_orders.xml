<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bg_light"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<FrameLayout
		android:id="@+id/navbar"
		android:layout_width="match_parent"
		android:layout_height="56dp"
		app:layout_constraintTop_toTopOf="parent">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/my_orders"
			android:textColor="@color/black"
			android:textSize="24sp"
			android:fontFamily="@font/montserrat"
			android:layout_gravity="center" />
	</FrameLayout>

	<LinearLayout
		android:id="@+id/category"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:background="@drawable/bg_segmented_container"
		android:backgroundTint="#eff0f2"
		app:layout_constraintTop_toBottomOf="@id/navbar"
		android:layout_marginHorizontal="20dp"
		android:padding="2dp">

		<LinearLayout
			android:id="@+id/currentOrders"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:background="@drawable/bg_segmented_selected"
			android:backgroundTint="@color/white"
			android:gravity="center"
			android:paddingHorizontal="12dp"
			android:layout_height="match_parent">

			<ImageView
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:src="@drawable/icon_flash"/>

			<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="@string/current_order"
				android:gravity="center"
				android:layout_marginStart="12dp"
				android:textColor="@color/black"
				android:fontFamily="@font/montserrat"
				android:textSize="13sp" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/historyOrders"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:background="@drawable/bg_segmented_selected"
			android:backgroundTint="@color/none"
			android:gravity="center"
			android:paddingHorizontal="12dp"
			android:layout_height="match_parent">

			<ImageView
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:src="@drawable/icon_orders_history"/>

			<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="@string/history"
				android:gravity="center"
				android:layout_marginStart="12dp"
				android:textColor="@color/black"
				android:fontFamily="@font/montserrat"
				android:textSize="13sp" />
		</LinearLayout>
	</LinearLayout>


