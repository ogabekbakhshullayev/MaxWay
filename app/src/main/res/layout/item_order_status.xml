<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_margin="12dp"
	android:backgroundTint="@color/white"
	android:id="@+id/item"
	android:background="@drawable/bg_rounded"
	android:paddingHorizontal="12dp"
	android:orientation="vertical"
	android:paddingVertical="8dp"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/order_status"
			android:textSize="20sp"
			android:textColor="@color/black"
			android:fontFamily="@font/montserrat" />

		<TextView
			android:id="@+id/orderStatusNum"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="103"
			android:textSize="20sp"
			android:textColor="@color/black"
			android:fontFamily="@font/montserrat" />
	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/order_confirmed"
		android:textSize="17sp"
		android:textColor="@color/violet"
		android:fontFamily="@font/montserrat" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_marginTop="12dp"
		android:layout_marginBottom="6dp"
		android:gravity="center_vertical">

		<ImageView
			android:id="@+id/status1"
			android:layout_width="44dp"
			android:layout_height="44dp"
			android:background="@drawable/bg_status"
			android:backgroundTint="@color/maxway_purple"
			android:src="@drawable/ic_order_status1"
			android:padding="10dp" />

		<View
			android:id="@+id/statusLine1"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="4dp"
			android:layout_marginHorizontal="6dp"
			android:background="@drawable/bg_status"
			android:backgroundTint="@color/maxway_purple" />

		<ImageView
			android:id="@+id/status2"
			android:layout_width="44dp"
			android:layout_height="44dp"
			android:background="@drawable/bg_status"
			android:backgroundTint="@color/lightest_grey"
			android:src="@drawable/ic_order_status2"
			android:padding="10dp" />

		<View
			android:id="@+id/statusLine2"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="4dp"
			android:layout_marginHorizontal="6dp"
			android:background="@drawable/bg_status"
			android:backgroundTint="@color/lightest_grey" />

		<ImageView
			android:id="@+id/status3"
			android:layout_width="44dp"
			android:layout_height="44dp"
			android:background="@drawable/bg_status"
			android:backgroundTint="@color/lightest_grey"
			android:src="@drawable/ic_order_status3"
			android:padding="10dp" />

		<View
			android:id="@+id/statusLine3"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="4dp"
			android:layout_marginHorizontal="6dp"
			android:background="@drawable/bg_status"
			android:backgroundTint="@color/lightest_grey" />

		<ImageView
			android:id="@+id/status4"
			android:layout_width="44dp"
			android:layout_height="44dp"
			android:background="@drawable/bg_status"
			android:backgroundTint="@color/lightest_grey"
			android:src="@drawable/ic_order_status4"
			android:padding="10dp" />
	</LinearLayout>
</LinearLayout>