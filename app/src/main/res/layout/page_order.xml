<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@color/bg_light"
	android:elevation="20dp"
	android:clickable="true"
	android:focusable="true"
	android:layout_height="match_parent">
	
	<FrameLayout
		android:id="@+id/navbar"
		android:layout_width="match_parent"
		android:layout_height="56dp"
		android:background="#fff"
		android:paddingHorizontal="16dp"
		app:layout_constraintTop_toTopOf="parent">

		<ImageView
			android:id="@+id/btnBack"
			android:layout_width="14dp"
			android:layout_height="16dp"
			android:src="@drawable/icon_back"
			android:layout_gravity="start|center"/>

		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="@string/current_order"
			android:layout_gravity="center"
			android:textColor="@color/black"
			android:textSize="18sp"
			android:fontFamily="@font/montserrat" />
	</FrameLayout>
	
	<androidx.cardview.widget.CardView
		android:id="@+id/imgView"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		app:layout_constraintTop_toBottomOf="@id/navbar"
		android:layout_margin="12dp"
		app:cardCornerRadius="10dp"
		app:cardElevation="0dp">

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:src="@drawable/img_order"
			android:scaleType="centerCrop"
			android:elevation="0dp"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/black"
			android:alpha=".3" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:paddingVertical="8dp"
			android:gravity="center_vertical"
			android:paddingHorizontal="12dp">

			<TextView
				android:id="@+id/numberOrder"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="Order â„–103"
				android:textColor="@color/white"
				android:textSize="16sp"
				android:fontFamily="@font/montserrat"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/cash"
				android:textColor="@color/white"
				android:textSize="16sp"
				android:fontFamily="@font/montserrat"/>

			<TextView
				android:id="@+id/date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="21.02.2026"
				android:textColor="@color/white"
				android:textSize="16sp"
				android:fontFamily="@font/montserrat_regular"/>
		</LinearLayout>
	</androidx.cardview.widget.CardView>

	<LinearLayout
		android:id="@+id/ordersList"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/imgView"
		android:layout_margin="12dp"
		android:orientation="vertical"
		android:background="@drawable/bg_rounded"
		android:backgroundTint="@color/white"
		android:paddingHorizontal="12dp"
		android:paddingVertical="8dp">

		<LinearLayout
			android:id="@+id/orderList"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginVertical="8dp"
			android:background="@color/black"
			android:alpha=".1"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/montserrat"
				android:textSize="17sp"
				android:text="@string/total_amount"
				android:textColor="@color/black" />

			<TextView
				android:id="@+id/totalAmount"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:gravity="end"
				android:layout_height="wrap_content"
				android:fontFamily="@font/montserrat"
				android:textSize="17sp"
				tools:text="205 000 sum"
				android:textColor="@color/black" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/status"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="12dp"
		android:backgroundTint="@color/white"
		android:background="@drawable/bg_rounded"
		app:layout_constraintTop_toBottomOf="@id/ordersList"
		android:paddingHorizontal="12dp"
		android:orientation="vertical"
		android:paddingVertical="8dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/order_status"
				android:textSize="20sp"
				android:textColor="@color/black"
				android:fontFamily="@font/montserrat" />

			<TextView
				android:id="@+id/orderStatusNum"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="103"
				android:textSize="20sp"
				android:textColor="@color/black"
				android:fontFamily="@font/montserrat" />
		</LinearLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/order_confirmed"
			android:textSize="17sp"
			android:textColor="@color/violet"
			android:fontFamily="@font/montserrat" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:layout_marginTop="12dp"
			android:layout_marginBottom="6dp"
			android:gravity="center_vertical">

			<ImageView
				android:id="@+id/status1"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:background="@drawable/bg_status"
				android:backgroundTint="@color/maxway_purple"
				android:src="@drawable/ic_order_status1"
				android:padding="10dp" />

			<View
				android:id="@+id/statusLine1"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="4dp"
				android:layout_marginHorizontal="6dp"
				android:background="@drawable/bg_status"
				android:backgroundTint="@color/maxway_purple" />

			<ImageView
				android:id="@+id/status2"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:background="@drawable/bg_status"
				android:backgroundTint="@color/lightest_grey"
				android:src="@drawable/ic_order_status2"
				android:padding="10dp" />

			<View
				android:id="@+id/statusLine2"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="4dp"
				android:layout_marginHorizontal="6dp"
				android:background="@drawable/bg_status"
				android:backgroundTint="@color/lightest_grey" />

			<ImageView
				android:id="@+id/status3"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:background="@drawable/bg_status"
				android:backgroundTint="@color/lightest_grey"
				android:src="@drawable/ic_order_status3"
				android:padding="10dp" />

			<View
				android:id="@+id/statusLine3"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="4dp"
				android:layout_marginHorizontal="6dp"
				android:background="@drawable/bg_status"
				android:backgroundTint="@color/lightest_grey" />

			<ImageView
				android:id="@+id/status4"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:background="@drawable/bg_status"
				android:backgroundTint="@color/lightest_grey"
				android:src="@drawable/ic_order_status4"
				android:padding="10dp" />
		</LinearLayout>
	</LinearLayout>

	<androidx.appcompat.widget.AppCompatButton
		android:id="@+id/btnReorder"
		android:layout_width="match_parent"
		android:layout_height="56dp"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_margin="12dp"
		android:background="@drawable/bg_add_order_button"
		android:text="@string/reorder"
		android:textAllCaps="false"
		android:textColor="@color/white"
		android:fontFamily="@font/montserrat"
		android:textSize="16sp" />
</androidx.constraintlayout.widget.ConstraintLayout>